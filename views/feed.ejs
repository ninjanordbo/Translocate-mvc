				<!-- Main -->
        <section id="banner">
          <div class="inner">
              <h2>Turtavle</h2>
              <p>Finn en å dele turen med<br />
              </p>     
          </div>
          <a href="#one" class="more scrolly">Sjekk turtavla</a>
        </section>		
						<section id="one" class="wrapper style1 special">
							<div class="inner">
									<header class="major">
										<h2>TURTAVLA</h2>
										<p>Sjekk postede turer & se om du kan finne en å dele turen med.</p>
									</header>

								<ul class="features">
									<% for(var i=0; i<posts.length; i++) {%>
										<li class="icon solid fa-car">
											<h2><%= posts[i].fromWhere  %></h2><h2><%= posts[i].toWhere %></h2>
											<span>Dato:</span>
											<p><%= posts[i].departureDate %></p><span>Tid:</span><p><%= posts[i].departureTime %></p>
											<span>Kommentar:</span><p><%= posts[i].caption %></p><span>Postet av:</span>
											<span><%= posts[i].createdBy %></span>
											<div>
												<a href="/post/<%= posts[i]._id%>" class="col-3 btn btn-primary">Skriv melding</a>
											</div>	
										</li>
										
									<% } %>
								</ul>								
							</div>
						</section>
					</div>
                
            	</section>
				

