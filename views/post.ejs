<!DOCTYPE HTML>

<html>
	<head>
		<title>Translocate</title>
		<meta charset="utf-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1, user-scalable=no" />
		<link rel="stylesheet" href="/css/main.css" />
		<noscript><link rel="stylesheet" href="/css/noscript.css" /></noscript>
	</head>


	<body class="is-preload">

		<!-- Page Wrapper -->
			<div id="page-wrapper">

				<!-- Header -->
					<header id="header">
						<h1><a href="index.html">Translocate</a></h1>
						<nav id="nav">
							<ul>
								<li class="special">
									<a href="#menu" class="menuToggle"><span>Menu</span></a>
									<div id="menu">
										<ul>
											<li><a href="index.html">Start</a></li>
											<li><a href="/feed">Turtavla</a></li>
											<li><a href="/profile">Post tur</a></li>
											<li><a href="/signup">Lag konto</a></li>
											<li><a href="/login">Logg inn</a></li>
											<li><a href="/logout">Logg ut</a></li>
										</ul>
									</div>
								</li>
							</ul>
						</nav>
					</header>

				<!-- Main -->
        <section id="banner">
          <div class="inner">
              <h2>Turpost</h2>
              <p>Sammen blir turen hyggeligere</p>       
          </div>
          <a href="#one" class="more scrolly"></a>
        </section>
		
        <section id="one" class="wrapper style1 special">
            <div class="inner">
                <div class="flex-direction-column mt-5">
					<div class="row justify-content-between"></div>
						<div class="col-6 ">
							<div class="singlePost">
							<h2><%= post.fromWhere %></h2><h2><%= post.toWhere %></h2>
							<p><%= post.departureDate %></p><h5><%= post.departureTime %></h5>						
							<p><%= post.caption %></p>	
							<span>Postet av:<%= post.createdBy %></span>
							</div>							 
						</div>					
					</div>
					<div id="postComments">	
						<ul>
							<h5>Kommentarer</h5>
							<% for(var i=0; i<comments.length; i++) {%>
							  <li class="">
							   <p><%= comments[i].comment%></p>
							   <p>Brukernavn: <%= comments[i].createdBy%></p>
							  </li>
							<% } %>
						  </ul>
					</div>
					<div class="mb-3">
						<form action="/comment/createComment/<%=post._id%>" method="POST">
						<div class="mb-3">
							<label for="comment" class="form-label">Legg igjen kommentar</label>
							<input type="text" class="form-control" id="comment" name="comment">
						</div>
						<button type="submit" class="btn btn-primary">Send</button>
						</form>
						<div class="col-6 mt-5">
							<a class="button" href="/profile">Post tur</a>
							<a class="button" href="/feed">Tilbake</a>
						</div>
					</div>	 			
				</div>
            </div>	            		
        </section>
	

				<!-- Footer -->
				<footer id="footer">
					<ul class="icons">
						<li><a href="https://twitter.com/ninjanordbo" class="icon brands fa-twitter"><span class="label">Twitter</span></a></li>
						<li><a href="https://github.com/ninjanordbo" class="icon brands fa-github"><span class="label">Github</span></a></li>
						<li><a href="https://www.linkedin.com/in/ninanordbo/" class="icon brands fa-linkedin"><span class="label">Linkedin</span></a></li>
						
					</ul>
					<ul class="copyright">
						<li>&copy; Ninjanordbo</li><li><a href="http://ninjanordbo.dev">Portfolio</a></li>
					</ul>
				</footer>

			

		<!-- Scripts -->
			<script src="/assets/js/jquery.min.js"></script>
			<script src="/assets/js/jquery.scrollex.min.js"></script>
			<script src="/assets/js/jquery.scrolly.min.js"></script>
			<script src="/assets/js/browser.min.js"></script>
			<script src="/assets/js/breakpoints.min.js"></script>
			<script src="/assets/js/util.js"></script>
			<script src="/assets/js/main.js"></script>

	</body>
</html>

